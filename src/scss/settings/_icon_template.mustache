{{#hasMixin}}@mixin {{mixinName}} {
	background-image: url("{{{sprite}}}");
	background-repeat: no-repeat;
}
{{#hasCommon}}.{{commonName}} {
	@include {{mixinName}};
}

{{/hasCommon}}{{/hasMixin}}{{^hasMixin}}{{#hasCommon}}.{{/hasCommon}}{{^hasCommon}}@mixin {{/hasCommon}}{{commonName}} {
	background-image: url("../img/{{{sprite}}}");
	background-repeat: no-repeat;
}

{{/hasMixin}}{{#shapes}}@mixin {{#selector.shape}}{{expression}}{{^last}},
{{/last}}{{/selector.shape}} {
	{{^hasCommon}}{{#hasMixin}}@include {{mixinName}};{{/hasMixin}}{{^hasMixin}}@include {{commonName}};{{/hasMixin}}
	{{/hasCommon}}background-position: {{position.relative.xy}};
	width: {{width.outer}}px;
	height: {{height.outer}}px;
	text-indent: -9999em;
}

%{{#selector.shape}}{{expression}}{{^last}},
{{/last}}{{/selector.shape}} {
	@include {{#selector.shape}}{{expression}}{{^last}},{{/last}}{{/selector.shape}};
}

{{/shapes}}